{
  "name": "chords-viewer",
  "version": "1.14.0",
  "description": "View chords generated with chords generator",
  "author": "Stanislav Popov <popstas@gmail.com>",
  "homepage": "https://github.com/popstas/chords-viewer",
  "private": true,
  "scripts": {
    "dev": "cross-env HOST=0.0.0.0 PORT=3001 nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "update-data": "curl https://raw.githubusercontent.com/popstas/chords-data/master/chords.json > chords.json",
    "version": "npm run changelog && git add CHANGELOG.md",
    "postversion": "git push && npm run release",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release": "conventional-github-releaser -p angular && npm run deploy",
    "deploy": "bash scripts/deploy.sh",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "parse-and-deploy": "bash scripts/parse-and-deploy.sh"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.5.4",
    "@nuxtjs/pwa": "^2.0.8",
    "@nuxtjs/style-resources": "^0.1.2",
    "axios": "^0.18.1",
    "element-ui": "^2.9.1",
    "fuse.js": "^3.4.5",
    "nosleep.js": "^0.7.0",
    "nuxt": "^2.8.1",
    "vue-awesome": "^3.5.4",
    "vue-shortkey": "^3.1.7",
    "vue-slideout": "^1.8.0",
    "vuex-persistedstate": "^2.5.4"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "conventional-changelog-cli": "^2.0.21",
    "conventional-github-releaser": "^3.1.3",
    "eslint": "^4.19.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-vue": "^4.7.1",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.21.0"
  }
}
