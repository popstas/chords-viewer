{
  "name": "chords-viewer",
  "version": "4.5.0",
  "description": "Offline chords app",
  "author": "Stanislav Popov <popstas@gmail.com>",
  "homepage": "https://github.com/popstas/chords-viewer",
  "private": true,
  "scripts": {
    "dev": "cross-env HOST=0.0.0.0 PORT=3001 nuxt",
    "parse-dev": "bash scripts/parse-dev.sh",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "build-beats": "node scripts/build-beats.js",
    "update-data": "curl https://raw.githubusercontent.com/popstas/chords-data/master/chords.json > chords.json",
    "version": "npm run changelog && git add CHANGELOG.md",
    "postversion": "git push && npm run release",
    "changelog": "npx conventional-changelog-cli -p angular -i CHANGELOG.md -s -r 0",
    "release": "npx conventional-github-releaser -p angular && npm run deploy",
    "deploy": "bash scripts/deploy.sh",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "parse": "bash scripts/parse.sh",
    "parse-and-deploy": "bash scripts/parse-and-deploy.sh"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.12.4",
    "@nuxtjs/pwa": "^3.0.0-beta.20",
    "@nuxtjs/style-resources": "^1.0.0",
    "axios": "^0.19.2",
    "copy-to-clipboard": "^3.3.3",
    "dateformat": "^3.0.3",
    "element-ui": "^2.14.1",
    "eslint-webpack-plugin": "^2.4.1",
    "firebase": "^7.24.0",
    "firebaseui": "^4.7.1",
    "fuse.js": "^6.4.0",
    "lodash": "^4.17.21",
    "nosleep.js": "^0.11.0",
    "nuxt": "^2.14.12",
    "sass": "^1.47.0",
    "vue-awesome": "^4.0.2",
    "vue-qr-generator": "^3.0.1",
    "vue-qrcode-reader": "^2.3.16",
    "vue-shortkey": "^3.1.7",
    "vue-slideout": "^1.8.0",
    "vue-virtual-scroller": "^1.1.2",
    "vuex-persistedstate": "^3.0.1",
    "webaudiofont": "^2.7.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.4.0",
    "eslint-friendly-formatter": "^4.0.1",
    "sass-loader": "^9.0.2",
    "style-loader": "^1.2.1"
  }
}
